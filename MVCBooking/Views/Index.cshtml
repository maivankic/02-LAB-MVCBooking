@model List<MVCBooking.Models.HotelBooking>

<h2>Bookings</h2>

@if (Model.Count == 0)
{
	<p>No bookings yet. </p>
}
else
{
	<table class="table">
		<thead>
			<tr>
				<th>Guest Name</th>
				<th>Room Number</th>
			</tr>
		</thead>
		<tbody>
		@foreach (var booking in Model)
			{
				<tr>
					<td>@booking.GuestName</td>
					<td>@booking.RoomNumber</td>
				</tr>
			}
		</tbody>
	</table>
}
<p><a asp-action="Create" class="btn btn-primary">New Booking</a></p>